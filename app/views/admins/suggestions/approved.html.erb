<div class="p-3 sm:p-5">
  <div class="">
    <div class="mb-6 max-w-[240px] w-full">
      <ul class="flex text-sm font-semibold text-center" id="default-tab" data-tabs-toggle="#default-tab-content" role="tablist" data-tabs-toggle="#default-styled-tab-content" data-tabs-active-classes="text-sm font-semibold !text-primary !border-primary" data-tabs-inactive-classes="dark:border-transparent !text-secondary hover:text-gray-600 dark:text-gray-400 border-gray-100 !hover:border-primary dark:border-gray-700 dark:hover:text-gray-300">
  
        <li class="me-2" role="presentation">
          <%= link_to 'Suggestions', new_request_admins_suggestions_path, class: 'inline-block p-4 border-b-[3px] rounded-t-lg', role: 'tab', id: 'Suggestions-tab', data: { tabs_target: '#Suggestions', toggle: 'tab' }, aria: { controls: 'Suggestions', selected: 'false' } %>
        </li>

        <li class="me-2" role="presentation">
          <%= link_to 'Problems', new_issues_admins_problems_path, class: 'inline-block p-4 border-b-[3px] rounded-t-lg text-secondary hover:!text-secondary' %>
        </li>
      </ul>
    </div>
    <div id="default-tab-content">
      <div id="Suggestions" role="tabpanel" aria-labelledby="Suggestions-tab">
        <div class="mb-3 px-3 py-2 bg-[#F6F6F6] rounded-md w-full">
          <ul class="flex gap-4 text-xs font-semibold text-center" id="inner-tab" data-tabs-toggle="#inner-tab-content" role="tablist">
            <li role="presentation">
              <%= link_to 'New Requests', new_request_admins_suggestions_path, class: 'inline-block text-secondary hover:!text-secondary', role: 'tab' %>
            </li>
            <li role="presentation">
              <%= link_to 'Approved', approved_admins_suggestions_path, class: 'inline-block !text-black', role: 'tab' %>
            </li>
            <li role="presentation">
              <%= link_to 'Declined', declined_admins_suggestions_path, class: 'inline-block text-secondary hover:!text-secondary', role: 'tab' %>
            </li>
          </ul>
        </div>
      </div>
      <div id="Approved" role="tabpanel" aria-labelledby="Approved-tab">
        <div class="overflow-x-auto scrollbar">
          <table class="min-w-full bg-white">
            <thead class="bg-[#E8F6FF]">
              <tr>
                <th class="text-left p-3 text-black text-sm font-medium rounded-l-md md:min-w-[250px]">E-mail</th>
                <th class="text-left p-3 text-black text-sm font-medium md:min-w-[250px]">Course Name</th>
                <th class="text-left p-3 text-black text-sm font-medium  md:min-w-[250px]">Location</th>
                <th class="text-left p-3 text-black text-sm font-medium rounded-r-md md:min-w-[250px]">Status</th>
              </tr>
            </thead>
            <tbody class="text-sm font-normal text-typo">
              <% @approved_courses.each do |course| %>
                <tr class="border-b border-gray-2">
                  <td class="whitespace-nowrap py-4 px-3"><%= course.user.email %></td>
                  <td class="whitespace-nowrap py-4 px-3"><%= course.course_name %></td>
                  <td class="py-4 px-3">
                    <p class="line-clamp-1 max-w-[600px] w-full">
                      <%= course.course_location %>
                    </p>
                  </td>
                  <td class="py-4 px-3 flex items-center gap-3">
                    <p class="text-xs font-normal text-primary">Approved</p>
                    <div class="size-6">
                      <%= image_tag '/assets/svg/approve.svg', alt: '', class: '' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
