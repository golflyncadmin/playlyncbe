<form action="<%= admins_dashboard_index_path %>" method="get" class="flex items-center w-full max-md:flex-wrap">
  <div id="date-range-picker" date-rangepicker class="flex items-center w-full max-sm:flex-nowrap max-sm:flex-col max-md:flex-wrap max-md:gap-2">
    <div class="relative max-md:w-full  w-full md:max-w-[230px]">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
        <%= image_tag '/assets/svg/calender.svg', alt: '', class: 'size-5' %>
      </div>
      <input id="datepicker-range-start" name="start" type="text" autocomplete="off" class="cursor-pointer border !border-gray-2 focus:!border-primary focus:ring-0 hover:!border-primary text-black text-sm rounded block !w-full ps-10 p-2.5 bg-white sm:max-w-[230px]" placeholder="Select Start Date"/>
    </div>
    <span class="mx-2 md:mx-4 text-xs text-secondary uppercase max-md:hidden ">to</span>
    <div class="relative max-md:w-full w-full md:max-w-[230px]">
      <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
        <%= image_tag '/assets/svg/calender.svg', alt: '', class: 'size-5' %>
      </div>
      <input id="datepicker-range-end" name="end" type="text" autocomplete="off" class="cursor-pointer border !border-gray-2 focus:!border-primary hover:!border-primary focus:ring-0 text-black text-sm rounded block !w-full ps-10 p-2.5 bg-white sm:max-w-[230px]" placeholder="Select End Date"/>
    </div>
    <div  class="w-full">
      <button type="submit" class=" ml-0 md:ml-4 flex items-center justify-center text-secondary w-full sm:max-w-[150px] h-[42px] border border-gray-2 rounded hover:bg-primary hover:text-white transition-all">
        Filter Users
      </button>
    </div>
  </div>
</form>
